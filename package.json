{
    "name": "simple-variants",
    "version": "1.0.1",
    "description": "Simple application variants",
    "main": "dist/simple-variants.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/ckaznocha/simple-variants"
    },
    "bugs": {
        "url": "https://github.com/ckaznocha/simple-variants/issues"
    },
    "bin": "dist/exe/simple-variants.js",
    "keywords": [
        "variants",
        "build",
        "node",
        "electron"
    ],
    "author": "Clifton Kazoncha <clifton@kaznocha.com> (https://clifton.kaznocha.com./)",
    "license": "MIT",
    "scripts": {
        "babel": "babel dist --out-dir dist --no-comments",
        "lint": "eslint --no-ignore src __tests__ *.ts",
        "preinstall": "npm install autodts",
        "postinstall": "autodts link",
        "prepublish": "npm run tsc && npm run babel",
        "test": "jest --coverage --no-cache",
        "tsc": "tsc && autodts generate"
    },
    "typescript": {
        "definition": "index.d.ts"
    },
    "dependencies": {
        "@types/commander": "^2.3.31",
        "@types/jest": "^19.2.2",
        "@types/js-yaml": "^3.5.29",
        "@types/node": "^7.0.5",
        "autodts": "^0.0.6",
        "commander": "^2.9.0",
        "js-yaml": "^3.8.1"
    },
    "devDependencies": {
        "@lib/autodts-generator": "^0.0.2",
        "babel-cli": "^6.23.0",
        "babel-preset-es2015": "^6.22.0",
        "babel-preset-stage-0": "^6.22.0",
        "coveralls": "^2.11.16",
        "eslint": "^3.16.1",
        "jest": "^20.0.0",
        "ts-jest": "^20.0.0",
        "typescript": "^2.2.1",
        "typescript-eslint-parser": "^3.0.0"
    },
    "jest": {
        "transform": {
            ".ts": "ts-jest/preprocessor"
        },
        "testResultsProcessor": "ts-jest/coverageprocessor",
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "testRegex": "/__tests__/.*\\.test\\.ts$"
    }
}
